{
	"name": "vscode-redhat-account",
	"displayName": "Red Hat OpenShift Services Account",
	"description": "Common Red Hat OpenShift Services account login extension",
	"version": "0.0.1",
	"publisher": "redhat",
	"engines": {
		"vscode": "^1.41.0"
	},
	"enableProposedApi": true,
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:redhat.account.login",
		"onCommand:redhat.account.status",
		"onAuthenticationRequest:redhat-account-auth"
	],
	"main": "./out/extension.js",
	"contributes": {
		"authentication": [
			{
				"label": "Red Hat",
				"id": "redhat-account-auth"
			}
		],
		"commands": [
			{
				"command": "redhat.account.login",
				"title": "Red Hat: Login to account"
			},
			{
				"command": "redhat.account.status",
				"title": "Red Hat: Check login status"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"openid-client": "^4.2.1",
		"randombytes": "2.1.0"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"source-map-support": "^0.5.12",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^4.0.2",
		"vscode-test": "^1.3.0"
	}
}
